@using RestaurantReview.Web.Helpers
@using RestaurantReview.Web.Models.ViewModels
@model RestaurantReview.Core.Models.Restaurant

@{
    ViewBag.Title = "Index";
}

<h2> Reviews for @Model.Name</h2>
<div class="row">
    <div class="col-md-6">
        @Html.Action("BestReview",
                      new ReviewActionVm
                      {
                          RestaurantId = Model.Id,
                          Type = Enums.ReviewDisplayType.Best
                      })
    </div>
    <div class="col-md-6">
        @Html.Action("BestReview", new ReviewActionVm
        {
            RestaurantId = Model.Id,
            Type = Enums.ReviewDisplayType.Worse


        })

    </div>
</div>

<p class="text-right">
    @Html.ActionLink("Create New", "Manage", new { restaurantId = Model.Id }, new { @class = "btn btn_success" })
</p>
@Html.Partial("_Reviews", Model.Reviews)

